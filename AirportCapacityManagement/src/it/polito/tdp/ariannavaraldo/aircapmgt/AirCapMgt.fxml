<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #B0C4DE;" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.ariannavaraldo.aircapmgt.AirCapMgtController">
	<top>
		<Label contentDisplay="CENTER" text="Airport Capacity Management" textFill="#413f9d" BorderPane.alignment="CENTER">
			<font>
				<Font name="Andale Mono" size="30.0" />
			</font>
			<BorderPane.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</BorderPane.margin>
		</Label>
	</top>
	<center>
		<VBox BorderPane.alignment="CENTER">
			<children>
				<HBox alignment="CENTER" spacing="5.0">
					<children>
						<Label alignment="CENTER" contentDisplay="BOTTOM" text="Aeroporto" textFill="#413f9d">
							<font>
								<Font name="Andale Mono" size="13.0" />
							</font>
						</Label>
						<ComboBox fx:id="airportBox" prefWidth="150.0" promptText="Select an airport" />
						<Label alignment="CENTER" contentDisplay="CENTER" text="Mese" textFill="#413f9d">
							<HBox.margin>
								<Insets left="10.0" />
							</HBox.margin>
							<font>
								<Font name="Andale Mono" size="13.0" />
							</font>
						</Label>
						<ComboBox fx:id="meseBox" prefHeight="27.0" prefWidth="110.0" />
						<Label text="Giorno" textFill="#413f9d">
							<HBox.margin>
								<Insets left="10.0" />
							</HBox.margin>
							<font>
								<Font name="Andale Mono" size="13.0" />
							</font>
						</Label>
						<ComboBox fx:id="giornoBox" prefHeight="27.0" prefWidth="145.0" />
						<Label text="Fascia oraria DA" textFill="#413f9d">
							<HBox.margin>
								<Insets left="10.0" />
							</HBox.margin>
							<font>
								<Font name="Andale Mono" size="13.0" />
							</font>
						</Label>
						<ComboBox fx:id="startBox" prefHeight="27.0" prefWidth="78.0" />
						<Label text="A" textFill="#413f9d">
							<font>
								<Font name="Andale Mono" size="13.0" />
							</font>
						</Label>
						<ComboBox fx:id="endBox" prefHeight="27.0" prefWidth="78.0" />
						<Button fx:id="btnCerca" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#doGetVoli" text="Cerca Voli" textFill="#413f9d">
							<HBox.margin>
								<Insets left="20.0" />
							</HBox.margin>
							<font>
								<Font name="Andale Mono" size="13.0" />
							</font>
						</Button>
					</children>
					<padding>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</padding>
				</HBox>
				<TabPane tabClosingPolicy="UNAVAILABLE">
					<tabs>
						<Tab closable="false" text="Partenze">
							<content>
								<AnchorPane minHeight="0.0" minWidth="0.0">
									<children>
										<VBox>
											<children>
												<HBox alignment="CENTER" spacing="100.0">
													<children>
														<TableView fx:id="tabDeparture" onMouseClicked="#doDepartureSelected" prefHeight="100.0" prefWidth="648.0" style="-fx-background-color: #C0C0C0;">
															<columns>
																<TableColumn fx:id="colDepartureCarrier" prefWidth="75.0" text="Carrier" />
																<TableColumn fx:id="colDepartureFlightNum" prefWidth="75.0" text="Flight Num" />
																<TableColumn fx:id="colDepartureDestination" prefWidth="112.0" text="Destination" />
																<TableColumn fx:id="colDepartureTime" prefWidth="131.0" text="Time" />
																<TableColumn fx:id="colDepartureEsito" prefWidth="75.0" text="Esito" />
															</columns>
															<columnResizePolicy>
																<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
															</columnResizePolicy>
														</TableView>
														<PieChart fx:id="pieTimeDeparture" prefHeight="255.0" prefWidth="350.0" title="Tempi media di permanenza" />
													</children>
													<padding>
														<Insets left="10.0" right="10.0" />
													</padding>
													<VBox.margin>
														<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
													</VBox.margin>
												</HBox>
												<HBox alignment="CENTER_LEFT">
													<children>
														<TableView fx:id="tabConfigDeparture" editable="true" prefHeight="80.0">
															<columns>
																<TableColumn prefWidth="75.0" sortable="false" text="Arrival advance">
																	<columns>
																		<TableColumn fx:id="colMinArrivalTime" prefWidth="75.0" sortable="false" text="Min" />
																		<TableColumn fx:id="colMaxArrivalTime" prefWidth="75.0" sortable="false" text="Max" />
																	</columns>
																</TableColumn>
																<TableColumn prefWidth="75.0" sortable="false" text="Time in Arrival area">
																	<columns>
																		<TableColumn fx:id="colMinTimeInArrivalArea" prefWidth="75.0" sortable="false" text="Min" />
																		<TableColumn fx:id="colMaxTimeInArrivalArea" prefWidth="75.0" sortable="false" text="Max" />
																	</columns>
																</TableColumn>
															</columns>
                                             <HBox.margin>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                             </HBox.margin>
														</TableView>
														<Button fx:id="btnSimulationDeparture" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#doSimulationDeparture" text="Avvia Simulazione" textFill="#413f9d">
															<HBox.margin>
																<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
															</HBox.margin>
															<font>
																<Font name="Andale Mono" size="13.0" />
															</font>
														</Button>
													</children>
													<VBox.margin>
														<Insets left="10.0" right="10.0" />
													</VBox.margin>
												</HBox>
												<TextArea fx:id="txtResultDeparture" prefHeight="250.0" prefWidth="650.0" style="-fx-background-color: #C0C0C0;">
													<VBox.margin>
														<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
													</VBox.margin>
													<font>
														<Font name="Andale Mono" size="13.0" />
													</font>
												</TextArea>
											</children>
										</VBox>
									</children>
								</AnchorPane>
							</content>
						</Tab>
						<Tab closable="false" text="Arrivi">
							<content>
								<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
									<children>
										<VBox>
											<children>
												<HBox alignment="CENTER" spacing="100.0">
													<children>
														<TableView fx:id="tabArrival" onMouseClicked="#doDepartureSelected" prefHeight="100.0" prefWidth="648.0" style="-fx-background-color: #C0C0C0;">
															<columns>
																<TableColumn fx:id="colArrivalCarrier" prefWidth="75.0" text="Carrier" />
																<TableColumn fx:id="colArrivalFlightNum" prefWidth="75.0" text="Flight Num" />
																<TableColumn fx:id="colArrivalFrom" prefWidth="112.0" text="From" />
																<TableColumn fx:id="colArrivalTime" prefWidth="131.0" text="Time" />
																<TableColumn fx:id="colArrivalEsito" prefWidth="75.0" text="Esito" />
															</columns>
															<columnResizePolicy>
																<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
															</columnResizePolicy>
														</TableView>
														<PieChart fx:id="pieTimeArrival" prefHeight="255.0" prefWidth="350.0" title="Tempi media di permanenza" />
													</children>
													<padding>
														<Insets left="10.0" right="10.0" />
													</padding>
													<VBox.margin>
														<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
													</VBox.margin>
												</HBox>
												<HBox alignment="CENTER_LEFT">
													<children>
														<Button fx:id="btnSimulationArrival" alignment="CENTER_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#doSimulationArrival" text="Avvia Simulazione" textFill="#413f9d">
															<HBox.margin>
																<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
															</HBox.margin>
															<font>
																<Font name="Andale Mono" size="13.0" />
															</font>
														</Button>
													</children>
													<VBox.margin>
														<Insets left="10.0" right="10.0" />
													</VBox.margin>
												</HBox>
												<TextArea fx:id="txtResultArrival" prefHeight="250.0" prefWidth="650.0" style="-fx-background-color: #C0C0C0;">
													<VBox.margin>
														<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
													</VBox.margin>
													<font>
														<Font name="Andale Mono" size="13.0" />
													</font>
												</TextArea>
											</children>
										</VBox>
									</children>
								</AnchorPane>
							</content>
						</Tab>
					</tabs>
					<VBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</VBox.margin>
				</TabPane>
			</children>
		</VBox>
	</center>
</BorderPane>
